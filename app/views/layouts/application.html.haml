    %head
        %title Meducation
        = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
        = javascript_include_tag "application", "data-turbolinks-track" => true
        = csrf_meta_tags
        
        %meta{charset: "utf-8"}
        %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
        %meta{content: "Meducation", name: "author"}
        %meta{content: "Meducation's Company Website", name: "description"}

        :javascript
            jQuery(document).ready(function() {
                App.init();
                App.initSliders();
                Index.initParallaxSlider();
            });

    %body
        .top
            .container
        .header
            .container
                .logo
                    =link_to image_tag("logo.png", alt:"Logo", id: "#logo-header"), root_path
                =render "layouts/menu"

        =yield

        .footer
            .container
                Footer

        .copyright
            .container
                Copyright
